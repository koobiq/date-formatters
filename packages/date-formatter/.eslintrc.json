{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*", "jest.config.js", "**.spec.ts"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": ["packages/date-formatter/tsconfig.*?.json", "tsconfig.*?.json"]
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
